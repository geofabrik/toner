{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "availability_zone":"us-east-1d",
      "source_ami": "ami-018c9568",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "toner-baseimage {{timestamp}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "provisioning/install_dependencies.sh"
    },
    {
      "type": "file",
      "source": "Makefile",
      "destination": "/home/ubuntu/toner-carto/Makefile"
    },
    {
      "type": "file",
      "source": "download_natural_earth_data.sh",
      "destination": "/home/ubuntu/toner-carto/download_natural_earth_data.sh"
    },
    {
      "type": "shell",
      "inline": [
        "#!/bin/bash",
        "set -e",
        "cd /home/ubuntu/toner-carto",
        "make land",
        "sh download_natural_earth_data.sh"
      ]
    },
    {
      "type": "file",
      "source": "merged_labels",
      "destination": "/home/ubuntu/toner-carto/merged_labels"
    },
    {
      "type": "file",
      "source": "fonts",
      "destination": "/home/ubuntu/toner-carto/fonts"
    }
  ]
}

